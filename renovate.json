{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    "group:monorepos",
    "group:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@mui/"],
      "groupName": "MUI packages"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "node": {
    "supportPolicy": ["16.x"]
  }
}