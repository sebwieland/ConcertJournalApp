{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    "group:monorepos",
    "group:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": ["@mui/"],
      "groupName": "MUI packages"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "engines": {
    "node": {
      "rangeStrategy": "replace",
      "supportPolicy": ["lts_latest"]
    }
  }
}